{
  "version": "2.0.0",
  "presentation": {
    "echo": false,
    "reveal": "always",
    "focus": false,
    "panel": "dedicated",
    "showReuseMessage": true,
    "clear": true
  },
  "tasks": [
    {
      "label": "Bootstrap",
      "dependsOn": ["Browser", "Frontend", "Backend"],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Frontend",
      "type": "shell",
      "isBackground": true,
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "presentation": {
        "group": "RCENEXT"
      }
    },
    {
      "label": "Backend",
      "type": "shell",
      "isBackground": true,
      "command": "./venv/Scripts/Activate.ps1; python manage.py runserver",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "presentation": {
        "group": "RCENEXT"
      }
    },
    {
      "label": "Browser",
      "type": "shell",
      "isBackground": true,
      "command": "C:/Program Files (x86)/Google/Chrome/Application/chrome.exe",
      "args": ["http://localhost:3000"],
      "presentation": {
        "showReuseMessage": false,
        "reveal": "never"
      }
    }
  ]
}
